<div class="form-wrap" id = "small-page">
  <div class = "name1" >Log in</div>

  <div class="in-form">
      <%= form_with(url: login_path, scope: :session) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "email", class: 'field' %>  
        
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "password", class: 'field' %>
        
        <div class="rememeber">
          <%= f.label :remember_me, class: "checkbox" do %>
          <%= f.check_box :remember_me %>
          <span id ="remember" >Remember me on this computer</span>
          <% end %>
        </div>
  

        <%= f.submit "Log in", id: "btn" %>
      <% end %>

      <p class = "new-user">New user? <%= link_to "Sign up now!", signup_path, id: "signup-btn" %></p>
    </div>
  </div>
</div>