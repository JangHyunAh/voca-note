<div class="form-wrap" id = "small-page">
    <h1 class="name1">Tags</h1>
    
    <div class="search-form">
      <%= form_with url: tags_path, local: true, method: :get do |f| %>
        <%= f.submit class: "search-btn"%>
        <%= f.text_field :tag, class: "search-field", placeholder: "Search" %>
      <%end%>
    </div>

    <table class = "in-form">   
      <thead>
        <tr>
          <th>no</th>
          <th colspan = "3">tag</th>

        </tr>
      </thead>
      <tbody class = "words-tags-table">
      <% @tags.each do |t| %>
        <tr>
          <td><%= t.id%></td>
          <td><%= t.name %></td>
          <% if logged_in? %>
            <% if current_user.id == t.user_id %>
              <td><%= link_to "Edit", edit_tag_path(t.id), id: "btn-to-edit" %></td>
              <td><%= button_to "Delete", tag_path(t.id), method: :delete, id: "btn-to-del" %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to "Create New Tag", new_tag_path, id:"index-btn" %>
  </div>
</div>